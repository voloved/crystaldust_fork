		case DIR_NORTH:
		case DIR_WEST:
			applymovement(OBJ_FARFETCHD, IlexForest_Movement_Farfetchd_8to2)
			waitmovement(0)
			setobjectxy(OBJ_FARFETCHD, POS2_X, POS2_Y)
			setobjectxyperm(OBJ_FARFETCHD, POS2_X, POS2_Y)
			setvar(VAR_ILEX_FARFETCHD_STATE, 2)
		case DIR_EAST:
