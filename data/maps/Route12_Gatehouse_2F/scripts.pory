mapscripts Route12_Gatehouse_2F_MapScripts {
    MAP_SCRIPT_ON_TRANSITION{
        gettime
        if(!(var(VAR_0x8000) == 12 || var(VAR_0x8000) == 13)) //12:00PM - 1:59PM
        {
            setflag(FLAG_TEMP_1)
        }
    }
}

